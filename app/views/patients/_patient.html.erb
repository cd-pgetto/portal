<div id="<%= dom_id patient %>" class="w-full sm:w-auto my-5 space-y-5">

  <p><strong><%= patient.patient_number %>
      -
      <%= patient.chart_number %></strong></p>

  <p><strong>Models:</strong>
    <%= patient.dental_models.count %></p>
  <ul>
    <% patient.dental_models.each do |dental_model| %>
      <li><%= link_to dental_model.name, graphical_dental_model_path(dental_model) %></li>
    <% end %>
  </ul>

</div>
