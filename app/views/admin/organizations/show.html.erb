<% content_for :title, "Show Organization" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="alert alert-info" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-2xl">Organization</h1>

  <%= render @organization %>

  <%= link_to "Edit this Organization", edit_admin_organization_path(@organization), class: "btn btn-accent" %>
  <%= link_to "Back to Organizations", admin_organizations_path, class: "btn btn-light" %>
  <%= button_to "Destroy this Organization", admin_organization_path(@organization), method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2",
    class: "btn btn-error", data: { turbo_confirm: "Are you sure?" } %>
</div>
